[color]
	branch = auto
	diff = auto
	status = auto
	sh = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red
	new = green
	whitespace = red reverse

[color "status"]
	added = green
	changed = red
	untracked = cyan

[color "sh"]
	branch = yellow
